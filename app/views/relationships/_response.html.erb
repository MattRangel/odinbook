<%= turbo_frame_tag dom_id(user, :response) do %>
  <%= link_to tag.div("Accept", class: "button accept-button"), relationships_path(relationship:{followed_by_id: user.id}, authenticity_token: form_authenticity_token), data: { turbo_method: :put } %>
  <%= link_to tag.div("Reject", class: "button reject-button"), relationships_path(relationship:{followed_by_id: user.id}, authenticity_token: form_authenticity_token), data: { turbo_method: :delete } %>
<% end %>
